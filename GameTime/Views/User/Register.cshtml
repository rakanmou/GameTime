@model GameTime.ViewModels.UserRegistrationVM

<div class="min-h-screen flex items-center justify-center bg-gray-100 py-10">
    <div class="w-full max-w-md bg-white shadow-lg rounded-xl p-6">

        <h2 class="text-2xl font-bold text-center mb-6">إنشاء حساب جديد</h2>

        <form asp-action="Register" method="post" class="space-y-4">

            <!-- Username -->
            <div>
                <label asp-for="UserName" class="block text-gray-700 font-medium mb-1"></label>
                <input asp-for="UserName"
                       class="w-full p-3 border rounded-lg focus:ring focus:outline-none" />
                <span asp-validation-for="UserName" class="text-red-600 text-sm"></span>
            </div>

            <!-- Email -->
            <div>
                <label asp-for="Email" class="block text-gray-700 font-medium mb-1"></label>
                <input asp-for="Email"
                       class="w-full p-3 border rounded-lg focus:ring focus:outline-none" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <!-- Password -->
            <div>
                <label asp-for="Password" class="block text-gray-700 font-medium mb-1"></label>
                <input asp-for="Password" type="password"
                       class="w-full p-3 border rounded-lg focus:ring focus:outline-none" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <!-- Submit -->
            <button type="submit"
                    class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition">
                إنشاء الحساب
            </button>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
