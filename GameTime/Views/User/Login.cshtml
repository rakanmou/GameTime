@model GameTime.ViewModels.User.LoginVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameTime</title>

    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GameTime.styles.css" asp-append-version="true" />

</head>

<body class="bg-gray-900 text-white min-h-screen flex items-center justify-center">

    <div class="w-full max-w-md bg-gray-800 rounded-2xl shadow-lg p-8">
        <div class="text-center mb-6">
            <h1 class="text-3xl font-bold text-blue-400">GameTime</h1>
            <p class="text-gray-300 mt-1">تسجيل الدخول إلى حسابك</p>
        </div>
    
        <form asp-action="Login" method="post" class="space-y-4">

            <!-- Username -->
            <div>
                <label asp-for="UserName" class="block text-sm font-medium text-gray-200 mb-1"></label>
                <input asp-for="UserName"
                       class="w-full px-4 py-2 rounded-lg bg-gray-900 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-400"
                       autocomplete="username" />
                <span asp-validation-for="UserName" class="text-red-400 text-sm"></span>
            </div>

            <!-- Password -->
            <div>
                <label class="block text-sm font-medium text-gray-200 mb-1"></label>
                <div class="relative">
                    <input asp-for="Password" id="passwordField" type="password"
                           class="w-full px-4 py-2 rounded-lg bg-gray-900 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-400"
                           autocomplete="current-password" />

                    <!-- Toggle button -->
                    <button type="button" onclick="togglePassword()"
                            class="absolute inset-y-0 right-3 flex items-center">

                        <!-- Eye -->
                        <svg id="eye" xmlns="http://www.w3.org/2000/svg"
                             class="h-5 w-5 text-gray-300" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M2.458 12C3.732 7.943 7.523 5 12 5c4.477 0 8.268 2.943
                         9.542 7-1.274 4.057-5.065 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>

                        <!-- Eye Off -->
                        <svg id="eyeOff" xmlns="http://www.w3.org/2000/svg"
                             class="h-5 w-5 text-gray-300 hidden" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M13.875 18.825A10.05 10.05 0 0112 19c-4.477 0-8.268-2.943-9.542-7a9.967
                         9.967 0 012.343-4.362M9.878 9.878a3 3 0 104.243 4.243" />
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M3 3l18 18" />
                        </svg>

                    </button>
                </div>

                <span asp-validation-for="Password" class="text-red-400 text-sm"></span>
            </div>

            <!-- 
            <div class="flex items-center justify-between">
            <input asp-for="RememberMe" type="checkbox" class="mr-2" />
            <label class="flex items-center text-sm text-gray-300">Remember Me</label>
            </div>
            -->

            <!-- Submit -->
            <button type="submit" class="w-full mt-2 bg-blue-600 hover:bg-blue-700 py-2 rounded-lg font-semibold">
                تسجيل الدخول
            </button>

            <p class="text-center text-gray-400 text-sm mt-4">
                لايوجد لديك حساب؟
                <a href="/User/Register" class="text-blue-400 hover:underline">إنشاء حساب</a>
            </p>

        </form>

   </div>


    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />

    <script>
            function togglePassword() {
                const field = document.getElementById("passwordField");
                const open = document.getElementById("eye");
                const closed = document.getElementById("eyeOff");

                if (field.type === "password") {
                    field.type = "text";
                    open.classList.add("hidden");
                    closed.classList.remove("hidden");
                } else {
                    field.type = "password";
                    closed.classList.add("hidden");
                    open.classList.remove("hidden");
                }
            }
    </script>
}

</body>
</html>
