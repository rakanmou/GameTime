<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - GameTime</title>
    
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GameTime.styles.css" asp-append-version="true" />

</head>
<body>

    <!-- TOP NAVBAR -->
    <nav class="bg-gray-800 border-b border-gray-700 px-8 py-4 flex items-center justify-between">

        <!-- Logo -->
        <div class="flex items-center space-x-3">
            <h1 class="text-2xl font-bold text-blue-400">GameTime</h1>
        </div>

        <!-- Center Menu -->
        <div class="hidden md:flex space-x-8 text-gray-300 font-medium">
            <a href="/Home/Index" class="hover:text-blue-400 transition">Dashboard</a>
            <a href="/Games" class="hover:text-blue-400 transition">My Games</a>
            <a href="/Categories" class="hover:text-blue-400 transition">Categories</a>
            <a href="/Profile" class="hover:text-blue-400 transition">Profile</a>
        </div>

        <!-- Right: Login / User -->
        <div class="flex items-center space-x-4">

            @if (User?.Identity?.IsAuthenticated == true)
            {
                <span class="text-gray-300">
                    Logged in as: <strong>@User.Identity.Name</strong>
                </span>

                <form asp-controller="User" asp-action="Logout" method="post">
                    <button type="submit"
                            class="bg-red-600 px-4 py-2 rounded-lg hover:bg-red-700 transition">
                        Logout
                    </button>
                </form>
            }
            else
            {
                <a href="/User/Login" class="hover:text-blue-400 transition">Login</a>
            }
        </div>

    </nav>


    <!-- MAIN CONTENT -->
    <main class="container mx-auto mt-8 px-6 pb-20">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-gray-800 py-4 text-center text-gray-400 border-t border-gray-700">
        © @DateTime.Now.Year GameTime. All rights reserved.
    </footer>


           <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
